@{
    ViewData["Title"] = "Home Page";
    Layout = "";
    var imageURL = ViewData["imageURL"] as List<string>;
    var imagesize = ViewData["imageSize"] as List<float>;
    var imagelist = ViewData["imagelist"] as List<string>;
    int n = 0 ;
}

<head>
    <title>@ViewData["Title"] - Bihan_Art</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
